<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:conv="clr-namespace:AssemblyUpdater.Converter"
                    xmlns:local="clr-namespace:AssemblyUpdater">
    <conv:TextWithDescriptionConverter x:Key="TextWithDescriptionConverter" />

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="VersionTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MaxLength" Value="2" />
        <Setter Property="MinWidth" Value="32" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
</ResourceDictionary>